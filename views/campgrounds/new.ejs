<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <title>YelpCamp | New Campground</title>
    <!-- Bootstrap CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
        integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <!-- Custom Stylesheet -->
    <link rel="stylesheet" href="/stylesheets/main.css">
</head>

<body>
    <%- include("../partials/navbar") %>
    <%- include("../partials/alerts") %>
    <div id="form-container" class="container">
        <h1 class="text-center">Create a New Campground</h1>
        <form action="/views/index.php" onsubmit="return validateForm()" method="POST">

            <div class="form-group">
                <label for="campground-name">Campground Name</label>
                <input type="text" name="name" placeholder="Name" id="campground-name" class="form-control"
                    autocomplete="off">
            </div>
            <div class="form-group">
                <label for="campground-image">Campground Image</label>
                <input type="text" name="image" placeholder="Image URL" id="campground-image" class="form-control"
                    autocomplete="off">
            </div>
            <div class="form-group">
                <label for="campground-description">Campground Description</label>
                <input type="text" name="description" placeholder="Campground Description" id="campground-description"
                    class="form-control" autocomplete="off">
            </div>
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
    <script>
        function validateForm() {
            if($("#campground-name").val().length < 1) {
                alert("Please enter a campground name.");
                return false;
            }
            if($("#campground-image").val().length < 1) {
                alert("Please enter an image URL.");
                return false;
            }
            if($("#campground-description").val().length < 1) {
                alert("Please enter a description.");
                return false;
            }
            alert("Successfully submitted.");
            return true;
        }
    </script>
</body>

</html>